{
  "name": "rr-tsdi",
  "version": "1.0.2",
  "description": "Dependency Injection container for TypeScript",
  "main": "dist/rr-tsdi-v1.0.1.js",
  "types": "dist/index.d.ts",
  "watch": {
    "lint": "src/**/*.ts"
  },
  "scripts": {
    "build": "webpack",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "watch": "npm-watch",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node"
  },
  "author": "Robert Rypu≈Ça",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robertrypula/rr-tsdi.git"
  },
  "bugs": {
    "url": "https://github.com/robertrypula/rr-tsdi/issues"
  },
  "keywords": [
    "Dependency Injection",
    "IoC",
    "TypeScript"
  ],
  "devDependencies": {
    "@types/jest": "^22.1.0",
    "coveralls": "^3.0.0",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.1",
    "ts-loader": "^3.2.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  }
}
